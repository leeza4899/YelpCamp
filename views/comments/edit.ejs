<%- include("../partials/header")%>
<div class = "container">
	<div class="jumbotron">
		<h1>
			Edit the comment: 
</h1>
	<div class="row">
			<div style="width=30%; margin: 25px auto;">
			<form class = "text-left" action="/campgrounds/<%= campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="desc">Comment: </label>
					<input class="form-control" id="desc" type="text" value= "<%= comment.text %>"  name="comment[text]">	
				</div>
				<div class="form-group text-center">
					<button class="btn btn-lg btn-primary">Submit</button>
				</div>
			</form>	
				<div class = "text-center">
					<a href="/campgrounds">Go Back!</a>
				</div>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer")%>