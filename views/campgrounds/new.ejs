<%- include("../partials/header")%>

<div class = "container">
	<div class="text-center jumbotron">
		<h1>Create a new campground here: </h1>
		<div class="row">
			<div style="width=30%; margin: 25px auto;">
			<form class = "text-left" action="/campgrounds" method="POST">
				<div class="form-group">
					<label for="campname">CampGround Name:</label>
					<input class="form-control" type="text" id= "campname" placeholder="Camp name"  name="name">	
				</div>
				<div class="form-group">
					<label for="price">Price</label>
					<input class="form-control" type="number" id= "price" placeholder="Price"  name="price" min="0.01" step="0.01">	
				</div>
				<div class="form-group">
					<label for="image1">Image Url: </label>
					<input class="form-control" id="image1" type="text" placeholder="image url" name = "image">
				</div>
				<div class="form-group">
					<label for="desc">Descritpion: </label>
					<input class="form-control" id="desc" type="text" placeholder="Description"  name="description">	
				</div>
				<div class="form-group text-center">
					<button class="btn btn-lg btn-primary">Submit</button>
				</div>
			</form>	
				<a href="/campgrounds">Go Back!</a>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer")%>